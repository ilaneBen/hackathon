{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ project.url }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ project.statut ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ message }}

    <a href="{{ path('app_project_index') }}">back to list</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">edit</a>
    {% if project.url %}
        <a href="{{ path('git_clone', {'repository': project.url}) }}">Clone Repository</a>
    {% endif %}
    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
