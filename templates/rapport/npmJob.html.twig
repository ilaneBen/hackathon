{% block body %}
    <div class="mb-5">
        {% if formattedJobs is not empty %}
            {% for formattedJob in formattedJobs %}
                {% set jobViewModel = formattedJob.jobViewModel %}
                {% if jobViewModel.getName() == 'NPM audit' %}
                    <div class="">
                        <h3 class="text-center">{{ jobViewModel.getName() }}</h3>
                        <p>{% set details = formattedJob.details %}</p>

                        {% if details is defined %}
                            {% for key, value in details %}
                                <div class="{% if loop.first %}resumer{% else %}d-none{% endif %}">
                                    <div class="d-flex justify-content-between">
                                        <div class="d-flex job-stat pt-2">
                                            <p>Total Vulnerabilities :</p>
                                            <p class="badge text-bg-danger">{{ details['NPM Audit Results'][2]['Vulnerabilities']['total'] }}</p>
                                        </div>
                                        <div class="d-flex job-stat pt-2">
                                            <p>high :</p>
                                            <p class="badge text-bg-warning">{{ details['NPM Audit Results'][2]['Vulnerabilities']['high'] }}</p>
                                        </div>
                                        <div class="d-flex job-stat pt-2">
                                            <p>moderate :</p>
                                            <p class="badge text-bg-secondary">{{ details['NPM Audit Results'][2]['Vulnerabilities']['moderate'] }}</p>
                                        </div>
                                        <div class="d-flex job-stat pt-2">
                                            <p>info :</p>
                                            <p class="badge text-bg-info">{{ details['NPM Audit Results'][2]['Vulnerabilities']['info'] }}</p>
                                        </div>
                                        <div class="d-flex job-stat pt-2">
                                            <p>critical :</p>
                                            <p class="badge text-bg-dark">{{ details['NPM Audit Results'][2]['Vulnerabilities']['critical'] }}</p>
                                        </div>
                                        <div class="d-flex job-stat pt-2">
                                            <p>low :</p>
                                            <p class="badge text-bg-light">{{ details['NPM Audit Results'][2]['Vulnerabilities']['low'] }}</p>
                                        </div>
                                        <a class="btn btn-dark btn-close-white" data-bs-toggle="collapse"
                                           href="#collapse-result-NPMAudit" role="button"
                                           aria-expanded="false"
                                           aria-controls="collapse-result-NPMAudit">
                                            Voir detail
                                        </a>
                                    </div>
                                </div>
                                <div class="collapse" id="collapse-result-NPMAudit">
                                    {% if key == 'NPM Audit Results' %}
                                        {% for npmAuditResult in value %}
                                            {% if npmAuditResult.Index == 2 %}

                                                {% if npmAuditResult['SpecificData'] is not empty %}

                                                    {% for dependency, details in npmAuditResult['SpecificData'] %}
                                                        <div class="card my-3">
                                                            <div class="card-header d-flex align-items-center justify-content-between">
                                                                <p><strong>Dependency
                                                                        Name:</strong> {{ details.name ?? "N/A" }}</p>
                                                                <div>
                                                                    <button type="button"
                                                                            class="btn btn-dark btn-close-white"
                                                                            data-bs-toggle="collapse"
                                                                            data-bs-target="#npm-audit-collapse-result-{{ loop.index }}"
                                                                            aria-expanded="false"
                                                                            aria-controls="yarn-audit-collapse-result-{{ loop.index }}">
                                                                        Voir detail
                                                                    </button>
                                                                </div>
                                                            </div>
                                                            <div class="collapse "
                                                                 id="npm-audit-collapse-result-{{ loop.index }}">
                                                                <table class="table table-striped">
                                                                    <thead class="thead-dark">
                                                                    <tr>
                                                                        <th>Details:</th>
                                                                        <th>Range:</th>
                                                                        <th>Effects:</th>
                                                                        <th>Fix Available:</th>
                                                                        <th>Fix Available Version:</th>
                                                                        <th>Severity:</th>
                                                                    </tr>
                                                                    </thead>

                                                                    <tbody>
                                                                    <tr>
                                                                        <td>{{ details.nodes[0] ?? "N/A" }}</td>
                                                                        <td>{{ details.range ?? "N/A" }}</td>
                                                                        <td>{{ details.effects[0] ?? "N/A" }}</td>
                                                                        <td>{{ details.fixAvailable.name ?? "N/A" }}</td>
                                                                        <td>{{ details.fixAvailable.version ?? "N/A" }}</td>
                                                                        <td> {{ details.severity ?? "N/A" }}</td>
                                                                    </tr>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    {% endfor %}
                                                {% else %}
                                                {% endif %}

                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            {% endfor %}
                        {% else %}
                            <p>No details available for this Job</p>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
        {% else %}
            <p>No Job available for this Report</p>
        {% endif %}
    </div>
{% endblock %}
