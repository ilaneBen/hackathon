{% block body %}
	<div class="mb-5 mt-5">
		{% if formattedJobs is not empty %}
			{% for formattedJob in formattedJobs %}
				{% set jobViewModel = formattedJob.jobViewModel %}
				{% if jobViewModel.getName() == 'Style Lint' %}
					<div class="">
						<h3 class="text-center">{{ jobViewModel.getName() }}</h3>
						<p>{% set details = formattedJob.details %}</p>
						<div class="d-flex justify-content-between mt-5">

							<div class="d-flex job-stat pt-2">
								<p>
									Erreurs:
								</p>
								<div>
									<p class="badge bg-danger">{{ details['Total Job Warnings'] }}</p>
								</div>
							</div>
							<div class="d-flex job-stat pt-2">
								<p>
									Deprecations:
								</p>
								<div>
									<p class="badge bg-danger">{{ details['Total Job Deprecations'] }}</p>
								</div>
							</div>

							<div>
								<button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#collapse-result-style-{{ loop.index }}" role="button" aria-expanded="false" aria-controls="collapse-result-style-{{ loop.index }}">
									Voir les détails
								</button>
							</div>
						</div>
						{% if details is defined %}
							<div class="collapse{% if details is empty %} d-none{% endif %}" id="collapse-result-style-{{ loop.index }}">
								{% for section, sectionDetails in details %}
									{% if section == 'Style Line Results' %}
										{% for result in sectionDetails %}
											<div class="mt-3  {% if result.errored %}resumer{% else %}d-none{% endif %}">
												<div class="m-5 d-flex justify-content-between">
													<div class="d-flex job-stat ">
														{% set pathParts = result.file|split('/' ~ rapport.tempDir ~ '/') %}
														<p>{{ pathParts[1] }}</p>
													</div>
													<div class="d-flex job-stat">
														<p>
															Erreurs :
														</p>
														<div>
															<p class="badge bg-danger">{{ result.totalWarnings }}</p>
														</div>
													</div>
													<div class="d-flex job-stat">
														<p>
															Deprecations:</p>
														<div>
															<p class="badge bg-warning">{{ result.totalDeprecations }}</p>
														</div>
													</div>
													<button class="btn btn-primary btn-close-white" type="button" data-bs-toggle="collapse" data-bs-target="#resultCollapse{{ loop.parent.loop.index }}-{{ loop.index }}" aria-expanded="false" aria-controls="resultCollapse{{ loop.parent.loop.index }}-{{ loop.index }}">
														Voir les détails
													</button>
												</div>
											</div>

											<div class="collapse" id="resultCollapse{{ loop.parent.loop.index }}-{{ loop.index }}">
												{% if result.warnings is not empty %}
													<table class="table table-striped mt-5">
														<thead class="thead-dark">
															<tr>
																<th scope="col">Line</th>
																<th scope="col">Rule</th>
																<th scope="col">Message</th>
																<th scope="col">Column</th>
																<th scope="col">Severity</th>
															</tr>
														</thead>
														<tbody>
															{% for warning in result.warnings %}
																<tr>
																	<td>{{ warning.line }}</td>
																	<td>{{ warning.rule }}</td>
																	<td>{{ warning.text }}</td>
																	<td>{{ warning.column }}</td>
																	<td>{{ warning.severity }}</td>
																</tr>
															{% endfor %}
														</tbody>
													</table>
												{% endif %}
											</div>
										{% endfor %}
									{% endif %}
								{% endfor %}
							</div>
						{% else %}
							<p>No details available for this job.</p>
						{% endif %}
					</div>
				{% endif %}
			{% endfor %}
		{% else %}
			<p>No jobs available for this report.</p>
		{% endif %}
	</div>
{% endblock %}
